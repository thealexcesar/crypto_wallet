<p id="notice"><%= notice %></p>
<h1>Coins</h1>
<table class="container table shadow table-striped table-hover border rounded shadow">
  <thead>
    <tr>
      <th>Coin name</th>
      <th>Acromym</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acromym %></td>
        <td><%= image_tag coin.url_image, size:'25x25' %></td>
        <td><%= link_to 'Show', coin %></td>
        <td><%= link_to 'Edit', edit_coin_path(coin) %></td>
        <td><%= link_to 'Destroy', coin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<i class="fab fa-ethereum"></i>
<br>
