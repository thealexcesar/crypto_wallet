<p id="notice"><%= notice %></p>
<div class="h4 mt-5 px-3 pt-2 container border d-flex justify-content-between">
  <h2>Coins</h2>
  <h2><%= link_to 'New coin', new_coin_path %></h2>
</div>
<table class="container table shadow table-striped table-hover border rounded shadow">
  <thead>
    <tr>
      <th>Coin name</th>
      <th>Acronym</th>
      <th>Image</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acromym %></td>
        <td><%= image_tag coin.url_image, size:'25x25' %></td>
        <td><%= link_to fa_icon('eye'), coin, class:'btn bg-primary' %></td>
        <td><%= link_to fa_icon('edit'), edit_coin_path(coin), class:'btn bg-warning' %></td>
        <td><%= link_to fa_icon('trash'), coin, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn bg-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
